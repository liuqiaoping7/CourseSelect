<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="col-sm-12">
          <%= render "shared/search" %>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr >
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr >

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %>/<%= course.period %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                    <td>
                    <!--  <%= link_to "查看信息", choose_course_url(course), class: 'btn btn-xs btn-info' %> -->
                    <button class="btn btn-xs btn-info" data-toggle="modal" data-target="#myModal_<%= course.id %>">查看课程信息</button>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-success' %></td>
                </tr>
              </tr>
              
                <!-- 模态对话框 -->
              <div class="modal fade" id="myModal_<%= course.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                      <h4 class="modal-title" id="myModalLabel"><%= course.name %></h4>
                      </div>
                      <div class="modal-body"><p>
                      课程类别：<%= course.course_type %> 
                          </p>
                          <p>
                          授课教师： <%= course.teacher.name %>
                        </p> <p>
                         授课方式：<%= course.teaching_type %>
                        </p>
                        <p>
                         考试方式：<%= course.exam_type %>  
                        </p><p>
                         限选人数：<%= course.limit_num %>人
                        </p><p>
                         学分：<%= course.credit %>分
                        </p><p>
                         课时：<%= course.period %>
                        </p><p>
                         授课方式：<%= course.teaching_type %>
                        </p><p>
                         上课教室：<%= course.class_room %>
                        </p><p>
                         上课时间：周<%= course.weekday %> <%= course.time_begin %>~<%= course.time_end %> 节 
                        </p>
                   
    
                      </div>
                      <div class="modal-footer">
                        <%= link_to "加入课程", select_course_path(course), class: 'btn btn-primary' %>
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        </div>
                     </div><!-- /.modal-content -->
                  </div><!-- /.modal -->
               </div>
        
            <% end %>
            


        
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


